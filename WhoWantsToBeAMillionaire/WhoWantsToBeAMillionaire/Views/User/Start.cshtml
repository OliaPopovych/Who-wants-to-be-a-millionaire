</div>
<div class="form-group">
    <div class="questions">
        @Model.Question.Text
    </div>

    @using (Html.BeginForm("Start", "User", "FormMethod.Post"))
    {
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" name="FirstAnswer" id=0 value="@Model.Question.Answers[0].Text" class="btn btn-default" />
            <input type="submit" name="SecondAnswer" id=1 value="@Model.Question.Answers[1].Text" class="btn btn-default" />
        </div>
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" name="ThirdAnswer" id=2 value="@Model.Question.Answers[2].Text" class="btn btn-default" />
            <input type="submit" name="FourthAnswer" id=3 value="@Model.Question.Answers[3].Text" class="btn btn-default" />
        </div>
    }
</div>

<script>
    $('[class="btn btn-default"]').on("click", function () {
        $.ajax({
            url: '/User/Start/?id=' + $(this).attr('id'),
            type: "POST",
            beforeSend: function () {
            },
            success: function (response) {
                window.location = response;
                $("#sbmtFifty").prop('disabled', "@Model.FiftyButtonDisabl");
            },
            error: function (jqXHR, status, err) {

            },
            complete: function (jqXHR, status) {

            }
        });
    });
</script>
<script>
    $("#sbmtFifty").on("click", function () {
        $.ajax({
            url: '/User/GetFifty/',
            type: "POST",
            beforeSend: function () {
            },
            success: function (response) {
                var answ = response;
                var number;
                $('[class="btn btn-default"]').each(function (index, item) {
                    if ($(item).attr('id') != answ) {
                        $(item).prop('disabled', true);
                    }
                });
                while ((number = Math.floor(Math.random() * 4)) == answ);
                $('[id="' + number + '"]').prop('disabled', false);
                $("#sbmtFifty").prop('disabled', "@Session["FiftyButtonDisabl"].ToString()");
                // $("#sbmtFifty").prop('disabled', true);
            },
            error: function (jqXHR, status, err) {
            },
            complete: function (jqXHR, status) {
            }
        });
    });
</script>

